@model DinnerWebApp.Models.AddDinnerModel

@{
    ViewData["Title"] = "View";
}

<html>
<head>
</head>
<body>
    <h4>Add a dinner</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">

            @using (Html.BeginForm("Create", "Dinner", FormMethod.Post))
            {
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Dinner.Description" class="control-label"></label>
                    @Html.TextBoxFor(model => model.Dinner.Description, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Dinner.Description)
                </div>
                <div class="form-group">
                    <label asp-for="Dinner.Date" class="control-label"></label>
                    @Html.TextBoxFor(model => model.Dinner.Date, new { @class = "form-control", @type = "date" })
                </div>
                <div class="form-group">
                    <label asp-for="Dinner.BaseScore" class="control-label"></label>
                    @Html.TextBoxFor(model => model.Dinner.BaseScore, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Dinner.BaseScore)
                </div>
                <div class="form-group">
                    <label asp-for="Dinner.BonusPoints" class="control-label"></label>
                    @Html.TextBoxFor(model => model.Dinner.BonusPoints, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Dinner.BonusPoints)
                </div>
                <div class="form-group">
                    <label asp-for="Dinner.Owner" class="control-label"></label>
                    @Html.DropDownListFor(model => model.Dinner.Owner, ViewBag.OwnerList as SelectList, new { @class = "form-control" })
                </div>

                <input type="submit" value="Create" class="btn btn-primary" />
            }
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>
</body>
</html>
